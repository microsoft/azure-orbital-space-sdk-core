{
    "version": "2.0.0",
    "options": {
        "env": {
            "DEBUG_SHIM_HOST": "spacesdk-core",
            "DEBUG_SHIM_CLIENT": "spacesdk-core-client"
        }
    },
    "tasks": [
        {
            "label": "deploy-debugshim-host",
            "isBackground": false,
            "command": "/bin/bash",
            "type": "shell",
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence",
            "args": [
                "/spacefx-dev/debugShim-deploy.sh",
                "--debug_shim",
                "${DEBUG_SHIM_HOST}",
                "--disable_plugin_configs"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "reset-debugshim-host",
            "isBackground": true,
            "command": "/bin/bash",
            "type": "shell",
            "dependsOrder": "sequence",
            "args": [
                "/spacefx-dev/debugShim-reset.sh",
                "--debug_shim",
                "${DEBUG_SHIM_HOST}",
                "--skip-pod-wait"
